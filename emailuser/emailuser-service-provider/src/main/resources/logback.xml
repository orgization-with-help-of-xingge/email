<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>
<configuration>

    <property name="logback.path" value="${logback.rootpath}/acccore-provider" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${logback.level}</level>
        </filter>
        <encoder charset="${logback.charset}" class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <Pattern>${logback.pattern}</Pattern>
            </layout>
        </encoder>

    </appender>

    <appender name="ROLLINGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
        <!-- 可让每天产生一个日志文件，最多 10 个，自动回滚 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logback.path}/%d{yyyy,aux}/%d{MM,aux}/acccore-provider.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder charset="${logback.charset}" class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <Pattern>${logback.pattern}</Pattern>
            </layout>
        </encoder>
    </appender>
    <!-- 异步输出 -->
    <appender name="ASYNC_ROLLINGFILE" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>2048</queueSize>
        <includeCallerData>false</includeCallerData>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="ROLLINGFILE"/>
    </appender>

    <appender name="ROLLINGFILE_SKYWALKING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logback.path}/%d{yyyy,aux}/%d{MM,aux}/acccore-provider-filebeat.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!--日志文件保留天数-->
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder charset="UTF-8" class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>
    <!-- 异步输出 -->
    <appender name="ASYNC_ROLLINGFILE_SKYWALKING" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>2048</queueSize>
        <includeCallerData>false</includeCallerData>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="ROLLINGFILE_SKYWALKING"/>
    </appender>

    <appender name="DAO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logback.path}/dao/dao.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>-->
        <encoder charset="${logback.charset}" class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <Pattern>${logback.pattern}</Pattern>
            </layout>
        </encoder>
    </appender>
    <!-- 异步输出 -->
    <appender name="ASYNC_DAO" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>2048</queueSize>
        <includeCallerData>false</includeCallerData>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="DAO"/>
    </appender>

    <appender name="BIZ" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${logback.path}/biz/biz.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>-->
        <encoder charset="${logback.charset}" class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="org.apache.skywalking.apm.toolkit.log.logback.v1.x.TraceIdPatternLogbackLayout">
                <Pattern>${logback.pattern}</Pattern>
            </layout>
        </encoder>
    </appender>
    <!-- 异步输出 -->
    <appender name="ASYNC_BIZ" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>2048</queueSize>
        <includeCallerData>false</includeCallerData>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="BIZ"/>
    </appender>

    <!--<appender name="LOGSTASH"
              class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${logstash.address}</destination>
        <encoder charset="UTF-8"
                 class="net.logstash.logback.encoder.LogstashEncoder" />
        <connectionStrategy>
            <roundRobin>
                <connectionTTL>1 minutes</connectionTTL>
            </roundRobin>
        </connectionStrategy>
    </appender>-->


    <!-- dao -->
    <logger name="com.fingard.rabbit.acccore.dao" level="${logback.level}">
        <appender-ref ref="ASYNC_DAO"/>
    </logger>
    <logger name="com.ibatis" level="${logback.level}">
        <appender-ref ref="ASYNC_DAO"/>
    </logger>
    <logger name="java.sql.Connection" level="${logback.level}">
        <appender-ref ref="ASYNC_DAO"/>
    </logger>

    <!-- biz -->
    <logger name="com.fingard.rabbit.acccore.biz" level="${logback.level}">
        <appender-ref ref="ASYNC_BIZ"/>
    </logger>

    <root level="${logback.level}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_DAO"/>
        <appender-ref ref="ASYNC_BIZ"/>
        <appender-ref ref="ROLLINGFILE"/>
        <appender-ref ref="ASYNC_ROLLINGFILE_SKYWALKING"/>
        <!--<appender-ref ref="LOGSTASH" />-->
    </root>

</configuration>
