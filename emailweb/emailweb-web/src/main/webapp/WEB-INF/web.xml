<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>websys-consumer</display-name>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:applicationContext.xml,
            classpath:spring/applicationContext-*.xml
        </param-value>
    </context-param>

    <!-- 字符集过滤器 -->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <description>初始化页面排序过滤器</description>
        <filter-name>PageSortingFilter</filter-name>
        <filter-class>com.fingard.rabbit.websys.web.filter.PageSortingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageSortingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>XssAttackFilterPUB</filter-name>
        <filter-class>com.fingard.rabbit.websys.web.filter.XssAttackFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XssAttackFilterPUB</filter-name>
        <url-pattern>*.pub</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>XssAttackFilterDO</filter-name>
        <filter-class>com.fingard.rabbit.websys.web.filter.XssAttackFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XssAttackFilterDO</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter>
        <description>设置前端缓存</description>
        <filter-name>CacheForWeek</filter-name>
        <filter-class>com.fingard.rabbit.websys.web.filter.WebCacheFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CacheForWeek</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CacheForWeek</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CacheForWeek</filter-name>
        <url-pattern>*.png</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>springSessionRepositoryFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSessionRepositoryFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.fingard.rui.core.web.RUIInitContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>atscloud</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:springmvc-servlet.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!--文件下载-->
    <servlet>
        <servlet-name>FileDownload</servlet-name>
        <servlet-class>com.fingard.rabbit.websys.web.controller.basicdata.FileDownload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownload</servlet-name>
        <url-pattern>/common/fileDownload.pub</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.cab</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/RUI/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/theme/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>atscloud</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>http://rabbit.fingard.com/rui-tags</taglib-uri>
            <taglib-location>/WEB-INF/classes/META-INF/rui.tld</taglib-location>
        </taglib>
    </jsp-config>

    <session-config>
        <session-timeout>600</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>/WEB-INF/theme/default/jsp/cfcaLogin.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/index/errorPage.pub</location>
    </error-page>
</web-app>
